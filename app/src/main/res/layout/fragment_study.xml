<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBook"
                android:layout_width="@dimen/card_H_catalog"
                android:layout_height="@dimen/card_H_catalog"
                android:layout_gravity="center"
                android:backgroundTint="@color/myOrange"
                app:cardCornerRadius="50dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/default_nav_item_title_max_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/book" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:text="@string/theBookStr"
                android:textColor="@color/myOrange"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/myOrange"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSigns"
                android:layout_width="@dimen/card_H_catalog"
                android:layout_height="@dimen/card_H_catalog"
                android:layout_gravity="center"
                app:cardCornerRadius="50dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="@dimen/default_nav_item_title_max_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    app:srcCompat="@drawable/traffic" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:text="@string/TrafficSTR"
                android:textColor="@color/background"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>