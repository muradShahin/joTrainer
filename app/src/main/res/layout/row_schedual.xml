<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/studentRowH"
    android:orientation="horizontal"
    android:background="@drawable/circularbordersolid"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="10dp"


    >


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/default_nav_item_title_max_width"
        android:layout_height="@dimen/default_nav_item_title_max_width"
        android:layout_gravity="center"
        android:layout_marginLeft="6dp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:srcCompat="@drawable/user" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagHstudent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="@dimen/cityTextSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#ba4c00" />

        <Button
            android:id="@+id/startBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/btn_login_shape"
            android:text="@string/startStr"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
